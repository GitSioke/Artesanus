            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ShadowEffect"
                android:text="@string/main_menu_no_previous_crafting"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>-->
        <fragment android:name="nandroid.artesanus.fragments.RSBlurFragment"
            android:id="@+id/list"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <fragment android:name="nandroid.artesanus.fragments.UnpairedDevicesFragment"
            android:id="@+id/menu_fragment_unpaired"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/main_menu_new_crafting"
        app:backgroundTint="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_add_white_18dp"/>
</android.support.design.widget.CoordinatorLayout>
