<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/monitor_main_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:textSize="100dp"
            android:text="10ºC"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/monitor_main_value"
            android:layout_toRightOf="@+id/monitor_main_value"
            android:src="@drawable/common_full_open_on_phone"
            android:id="@+id/imageView" />
        <TextView
            android:id="@+id/monitor_second_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/monitor_main_value"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:textSize="50dp"
            android:text="10ºC"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/monitor_second_value"
            android:layout_toRightOf="@+id/monitor_second_value"
            android:src="@drawable/common_full_open_on_phone"/>

        <TextView
            android:id="@+id/monitor_third_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/monitor_second_value"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:textSize="50dp"
            android:text="10ºC"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/monitor_third_value"
            android:layout_toRightOf="@+id/monitor_third_value"
            android:src="@drawable/common_full_open_on_phone"/>
        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="74dp">
        </WebView>
    </RelativeLayout>


</LinearLayout>