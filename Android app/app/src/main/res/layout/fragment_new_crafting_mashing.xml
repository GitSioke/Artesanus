<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/darkYellow"
            android:alpha="0.90">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:id="@+id/new_crafting_steps"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/new_crafting_step"
                    android:textColor="@color/white"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="1.8"
                    android:shadowColor="@color/black"
                    ></TextView>
                <ImageView
                    android:id="@+id/new_crafting_add_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_black_18dp"
                    android:layout_toEndOf="@+id/new_crafting_steps"
                    android:padding="5dp"/>
            </RelativeLayout>
            <ListView
                android:id="@+id/new_crafting_step_added"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="10dp"></ListView>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
