        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".MenuActivity"
            android:label="@string/menu_title"
            android:exported="true">
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/menu_title"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MonitoringActivity"
            android:label="@string/monitor_title">
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->

                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>

        <activity
            android:name="nandroid.artesanus.gui.DeviceListActivity"
            android:label="@string/title_activity_device_list"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="nandroid.artesanus.gui.NewBeerCraftingActivity"
            android:label="@string/title_activity_newcrafting">
            <!--<intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>-->
        </activity>

        <activity
            android:name=".SplashActivity"
            android:label="@string/title_activity_splash"
            android:theme="@style/AppTheme.NoActionBar"
            android:noHistory="true">
            <!--<intent-filter>
                            <action android:name="android.intent.action.MAIN" />

                            <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>-->
        </activity>

        <service
            android:name="nandroid.artesanus.services.NotifierService"
            android:enabled="true"
            android:exported="true" />

        <service
            android:name="nandroid.artesanus.services.BluetoothMessageService"
            android:enabled="true"
            android:exported="true" />

        <service
            android:name="nandroid.artesanus.services.TimerService"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>
